<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.KiemKe_CTActivity"
    android:background="@drawable/popup_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phiếu Kiểm kê 1"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_black"
                android:textAllCaps="true"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:padding="1dp" />

            <Button
                android:onClick="onScanClick"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/scanner_item"
                android:textColor="@color/colorAccent1" />


        </RelativeLayout>


       <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rela1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:background="@drawable/phieu_img_bg">

            <TextView
                android:id="@+id/mtp1"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lato_black"
                android:text="MTP: 11223366"
                android:textColor="@color/black"
                android:background="@drawable/true_bg"
                android:textSize="15sp" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/true_bg"
                android:fontFamily="@font/lato_black"
                android:text="Số lô: A123B32"
                android:textColor="@color/black"
                android:textSize="15sp" />

           <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/true_bg"
                android:fontFamily="@font/lato_black"
                android:text="DVT: Hộp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/lato_black"
                android:text="Tên: Thuốc A"
                android:background="@drawable/true_bg"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="85dp"
                android:fontFamily="@font/lato_black"
                android:text="Số kệ: K123"
                android:background="@drawable/true_bg"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sl1_txt"
                android:inputType="number"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="85dp"
                android:fontFamily="@font/lato_black"
                android:text="SL Tồn: 123"
                android:background="@drawable/true_bg"
                android:textColor="@color/black"
                android:textSize="15sp"/>
           <EditText
               android:id="@+id/slthuc_txt"
               android:inputType="number"
               android:enabled="true"
               android:layout_width="175dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="180dp"
               android:layout_marginTop="125dp"
               android:fontFamily="@font/lato_black"
               android:hint="SL Thực: "
               android:background="@drawable/true_bg"
               android:textColor="@color/black"
               android:textSize="15sp"/>

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="125dp"
                android:fontFamily="@font/lato_black"
                android:text="HD: 10/06/2021"
                android:background="@drawable/true_bg"
                android:textColor="@color/black"
                android:textSize="15sp" />

           <Button
               android:id="@+id/capnhatBtn"
               android:layout_width="135dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="110dp"
               android:layout_marginTop="175dp"
               android:fontFamily="@font/lato_black"
               android:text="Cập Nhật"
               android:textStyle="bold"
               android:background="@drawable/true_bg"
               android:textColor="@color/black"
               android:textSize="18sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/finish_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="10dp">



            <Button
                android:id="@+id/Htat_btn"
                android:onClick="onScanClick"
                android:text="Hoàn tất"
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:background="@drawable/true_bg"
                android:textColor="@color/Black" />


        </RelativeLayout>


    </LinearLayout>


</ScrollView>