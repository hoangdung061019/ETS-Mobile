<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:autoFocusButtonColor="@android:color/white"
        app:autoFocusButtonVisible="true"
        app:flashButtonColor="@android:color/white"
        app:flashButtonVisible="true"
        app:frameColor="@android:color/white"
        app:frameCornersSize="50dp"
        app:frameCornersRadius="0dp"
        app:frameAspectRatioWidth="1"
        app:frameAspectRatioHeight="1"
        app:frameSize="0.75"
        app:frameThickness="2dp"
        app:maskColor="#77000000"/>

    <TextView
        android:id="@+id/kq_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanner_view"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:text="Scan something..." />


    <TextView
        android:visibility="gone"
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanner_view"
        android:layout_centerHorizontal="true"
        android:layout_margin="70dp"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="Test data" />

    <Button
        android:visibility="gone"
        android:id="@+id/XuatDC_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kq_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Next"
        android:elevation="40dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/true_bg"/>

    <Button
        android:visibility="gone"
        android:id="@+id/NhapDC_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kq_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Next"
        android:elevation="40dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/true_bg"/>

    <Button
        android:visibility="gone"
        android:id="@+id/KhoDC_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kq_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Next"
        android:elevation="40dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/true_bg"/>

    <Button
        android:visibility="gone"
        android:id="@+id/KK_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kq_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Next"
        android:elevation="40dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/true_bg"/>




</RelativeLayout>